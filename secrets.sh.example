#!/usr/bin/env bash
# secrets.sh.example - Template for commonink secrets
# Copy to secrets.sh and fill in real values:
#   cp secrets.sh.example secrets.sh
#
# Only SECRETS live here. Identifiers and URLs are in the Makefile.
# secrets.sh is gitignored and should never be committed.
#
# Usage: source secrets.sh && make run

# Core - 32-byte hex-encoded master key for encryption KEK derivation
# Generate with: openssl rand -hex 32
export MASTER_KEY=""

# Google OIDC secret - from https://console.cloud.google.com/apis/credentials
export GOOGLE_CLIENT_SECRET=""

# Email (Resend) - from https://resend.com/api-keys
export RESEND_API_KEY=""

# S3/Tigris - leave empty to use --no-s3 mock for local dev
# In production, these are auto-set by `fly storage create`
export AWS_ACCESS_KEY_ID=""
export AWS_SECRET_ACCESS_KEY=""
export AWS_ENDPOINT_URL_S3=""

# OpenAI - for e2e conformance tests (tests/e2e/openai)
export OPENAI_API_KEY=""

# OAuth provider secrets (required, no fallback generation).
# Generate OAUTH_HMAC_SECRET with: openssl rand -hex 32
export OAUTH_HMAC_SECRET=""
# Generate OAUTH_SIGNING_KEY with: openssl rand -hex 32
export OAUTH_SIGNING_KEY=""
